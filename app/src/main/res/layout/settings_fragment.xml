<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_time_format_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time Format"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp" />

    <RadioGroup
        android:id="@+id/radio_time_format"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/radio_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12-hour" />

        <RadioButton
            android:id="@+id/radio_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24-hour" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_alarm_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm Sound"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/button_pick_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Alarm Sound" />

    <TextView
        android:id="@+id/selected_sound_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No sound selected"
        android:textSize="14sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_ring_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alarm Ring Duration"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="32dp" />

    <Spinner
        android:id="@+id/spinner_ring_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:text="About"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_about_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="App Name: LabWorks\nVersion: 1.0\nDeveloper: Your Name"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />



</LinearLayout>